<h1>Listing reservas</h1>

<table>
  <tr>
    <th>Cod reserva</th>
    <th>Cod evento</th>
    <th>Nombre</th>
    <th>Acompaniantes</th>
    <th>Contacto</th>
    <th>Relaciones</th>
    <th>Origen</th>
    <th>Fecha</th>
    <th>Hora</th>
    <th>Fijo</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @reservas.each do |reserva| %>
  <tr>
    <td><%= reserva.cod_reserva %></td>
    <td><%= reserva.cod_evento %></td>
    <td><%= reserva.nombre %></td>
    <td><%= reserva.acompaniantes %></td>
    <td><%= reserva.contacto %></td>
    <td><%= reserva.relaciones %></td>
    <td><%= reserva.origen %></td>
    <td><%= reserva.fecha %></td>
    <td><%= reserva.hora %></td>
    <td><%= reserva.fijo %></td>
    <td><%= link_to 'Show', reserva %></td>
    <td><%= link_to 'Edit', edit_reserva_path(reserva) %></td>
    <td><%= link_to 'Destroy', reserva, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

